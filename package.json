{
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "eslint": "^9.19.0",
        "fs-extra": "^11.3.0",
        "globals": "^15.14.0",
        "htmlhint": "^1.1.4",
        "madge": "^8.0.0",
        "rimraf": "^6.0.1",
        "stylelint": "^16.6.1",
        "stylelint-config-recommended": "^14.0.0"
    },
    "scripts": {
        "lint:js": "eslint js",
        "lint:css": "stylelint css",
        "lint:html": "htmlhint **/*.html",
        "dev": "npx esbuild js/*.js --bundle --outdir=dist --servedir=. --serve=8080",
        "clean": "rimraf public",
        "build:js": "npx esbuild js/*.js --bundle --minify --outdir=public",
        "build:static": "copyfiles -u 1 index.html dashboard.html \"css/**/*\" \"assets/**/*\" public",
        "build": "npm run clean && npm run build:js && npm run build:static"
    },
    "dependencies": {
        "esbuild": "^0.24.2"
    }
}
